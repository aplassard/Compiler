// This is a test of the parsing component of the compiler.

program test_program is

    integer two_int;
    integer red_int;
    integer blue_int;
    integer one_int;
    bool isGreaterThan;
    integer i;
    integer mult_of_two;

begin


    for (i := 0; i <= blue_int)
        i := i + 1.;
        mult_of_two := i * 2;
    end for;

    blue_int := (((((one_int * two_int) + red_int))));
    if ((blue_int * 2) >= -1) then
        isGreaterThan := true;
        one_int := 1;
    else
        one_int := 1;
        isGreaterThan := false;
    
    end if;

    return;

end program
